<Window x:Class="STDB.CustomerEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STDB"
        mc:Ignorable="d"
        Title="CustomerEditWindow" Height="192" Width="329">
    <Grid>
        <Label x:Name="Name_Lb" Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <Label x:Name="Address_Lb" Content="Address" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.342,-0.538"/>
        <Label x:Name="Date_Lb" Content="Date" HorizontalAlignment="Left" Margin="10,93,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Name_Tb" HorizontalAlignment="Left" Height="23" Margin="70,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="Address_Tb" HorizontalAlignment="Left" Height="46" Margin="70,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <DatePicker x:Name="Date_Dp" HorizontalAlignment="Left" Margin="70,95,0,0" VerticalAlignment="Top" Width="150"/>
        <Button x:Name="Save_Ch_Cust_Bt" Content="Save" HorizontalAlignment="Left" Margin="10,124,0,0" VerticalAlignment="Top" Width="210" Click="Save_Ch_Cust_Bt_Click"/>

    </Grid>
</Window>
